<odoo>
    <record id="view_cliente_form" model="ir.ui.view">
        <field name="name">view.cliente.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form string="cliente">
                <sheet>
                    <group>
                        <field name="name" string="Nombre"/>
                        <field name="email" string="Correo ElectrÃ³nico"/>
                        <field name="phone" string="TelÃ©fono"/>
                        <field name="is_vip" string="Cliente VIP"/>
                    </group>
                    <group string="Reservas">
                        <field name="reserva_ids" widget="one2many_list"></field>
                    </group>
                </sheet>
                <footer>
                    <button string="Guardar" type="object" name="action_save" class="btn-primary"/>
                    <button string="Cancelar" type="object" name="action_cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_cliente_list" model="ir.ui.view">
        <field name="name">cliente.tree</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <list string="Clientes">
                <field name="name"/>
                <field name="is_vip"/>
                <field name="email"/>
                <field name="phone"/>
            </list>
        </field>
    </record>

    <record id="action_cliente" model="ir.actions.act_window">
        <field name="name">Clientes</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form</field> 
        <field name="view_id" ref="view_cliente_list"/> 
    </record>
    
    <menuitem id="menu_clientes" name="Clientes" parent="contacts.menu_contacts" sequence="10"/>
    <menuitem id="menu_clientes_reservas" parent="menu_clientes" name="Clientes VIP" action="action_cliente" sequence="10"/>
</odoo>
